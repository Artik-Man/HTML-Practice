    p Похожим способом можно сделать и дропдаун для кнопки

    pre(data-lang="html" data-code="dropdown")
      :escape
        <button>О нас
          <ul class="dropdown">
            <li><a href="">О компании прессе</a></li>
            <li><a href="">Юридическая информация</a></li>
            <li><a href="">Контактная информация</a></li>
          </ul>
        </button>

    pre(data-lang="css" data-code="dropdown")
      :escape
        button {
          background: white;
          border: 1px solid gray;
          border-radius: 4px;
          padding: 8px 16px;
          position: relative;
          margin-bottom: 100px;
        }
        button:hover {
          background: lightblue;
        }
        *:hover > .dropdown { /* при наведении на любой элемент, содержащий .dropdown ... */
          display: block;
        }
        .dropdown {
          display: none;
          position: absolute;
          top: 100%;
          left: 0;
          padding: 16px;
          margin: 0;
          list-style: none;
          box-shadow: 0 0 5px 0 black;
          border-radius: 4px;
          background: white;
          min-width: 200px;
        }
        .dropdown li {
          display: block;
          margin-bottom: 8px;
          text-align: left;
        }

    
